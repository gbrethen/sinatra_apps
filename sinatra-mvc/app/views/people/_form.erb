	<script>
	  $(document).ready(function() {
		$( "#birthdate" ).datepicker({
		  changeMonth: true,
		  changeYear: true,
		  yearRange: "-100:+0",
		  dateFormat: "mm/dd/yyyy"
		});
	  });
	</script>
	<form class="col-lg-12 col-md-12 form-inline" id="<%= people_form_id(@person) %>" action="<%= people_form_action(@person) %>" method="post">
		<input type="hidden" name="_method" value="<%= people_form_method(@person) %>" />
		<% if defined?(@error) && (@error != '') %><span class="label label-danger"><%= @error %></span><br/><% end %>
		<br/>
		<div class="panel panel-success">
			<div class="panel-heading"><b><%= @heading %></b></div>
			<div class="panel-body">
				<div class="form-group">
					<label for="first_name">First Name:</label>
					<input id="first_name" name="first_name" type="text" value="<%= @person.first_name %>" class="form-control">
				</div>
		
				<div class="form-group">
					<label for="last_name">Last Name:</label>
					<input id="last_name" name="last_name" type="text" value="<%= @person.last_name %>" class="form-control">
				</div>
		
				<div class="form-group">
					<label for="birthdate">Birthdate:</label>
					<input type="text" class="form-control" id="birthdate" name="birthdate" value="<%= @birthdate %>">
				</div>
					
				<div class="form-group">
					<input type="submit" class="btn btn-default"/>
				</div>
			</div>
		</div>
	</form>
	