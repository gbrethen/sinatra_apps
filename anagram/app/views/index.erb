<form class="col-md-10 form-inline" action="/" method="post">
	<% if @error.present? %><div class="alert alert-danger col-md-8"><span class="glyphicon glyphicon-warning-sign"></span>&nbsp;<%= @error %></p></div><br/><% end %>
	<div class="form-group">
		<label for="word">Enter a word:&nbsp;</label>
		<input class="form-control" type="text" id="word" name="word">
	</div>
	<input type="submit" class="btn btn-default">
</form>
<script>
	$(document).ready(function(){
		$("#word").focus();
	});
</script>