<form class="col-md-10 form-inline" action="/" method="post">
	<div class="form-group">
		<label for="word">Enter a word (<em>Only 3 letters please!</em>):</label>
		<input class="form-control" type="text" id="word" name="word"><% if defined?(@error) && (@error != '') %><span class="label label-danger"><%= @error %></span><br/><% end %>
	</div>
	<input type="submit" class="btn btn-default">
</form>