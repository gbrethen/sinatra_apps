<form class="col-md-10 form-inline" id="<%= word_form_id(@word) %>" action="<%= word_form_action(@word) %>" method="post">
	<input type="hidden" name="_method" value="<%= word_form_method(@word) %>" />
	<div class="alert alert-success" role="alert"><b><%= @heading %></b></div>
	<div class="form-group">
		<label for="word"><%= @label %></label>
		<input class="form-control" type="text" id="word" name="word" value="<%= @word.text %>">
	</div>
	<input type="submit" class="btn btn-default">
</form>