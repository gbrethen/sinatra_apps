<form id="<%= word_form_id(@word) %>" action="<%= word_form_action(@word) %>" method="post">
	<input type="hidden" name="_method" value="<%= word_form_method(@word) %>" />
	<div class="panel panel-default col-md-6 col-md-offset-3" role="alert"><b><%= @heading %></b></div>
	<div class="col-md-3">&nbsp;</div>
	<div class="col-md-12">&nbsp;</div>
	<div>
		<i>Please enter a new word below.</i>
	</div>
	<div class="col-md-4 col-md-offset-4">
		<input type="text" id="word" name="word" value="<%= @word.text %>"  placeholder="Enter a word" />
	</div>
	<div class="col-md-4">&nbsp;</div>
	<div class="col-md-12">&nbsp;</div>
	<div>
		<input type="submit" class="btn btn-primary" value="SUBMIT WORD">
	</div>
</form>